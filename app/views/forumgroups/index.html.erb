<div id="forum_groups">
  <% @groups.each do |g| %>
    <div class="group">
      <div class="header">
        <%= g.name %> - <%= g.position %> - <%= g.id %>
      </div>

      <div class="forums">
        <% g.forums.sort_by{|s| s[:position]}.each do |f| %>
        <div class="forum">
          <%= f.name %>
        </div>
        <% end %>
      </div>

    </div>
  <% end %>
</div>