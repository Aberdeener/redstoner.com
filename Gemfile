  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

group :development do
  gem 'webrick'
  gem 'better_errors'
  gem 'binding_of_caller'
  gem 'rails-erd'
end

