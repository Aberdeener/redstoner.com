<h1>New Info</h1>
<%= form_for @info, url: info_index_path do |f|%>
  <%= f.text_field :title, placeholder: "Title" %>
  <%= render partial: "mdhelp" %>
  <%= f.text_area :content, placeholder: "Text" %>
  <p><%= f.submit "Create Info", class: "btn blue left" %></p>
  <div class="clear"></div>
<% end %>
