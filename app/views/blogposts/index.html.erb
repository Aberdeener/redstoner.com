<%= button_to 'Make new Post', new_blogpost_path, method: "get", class: "btn blue" if mod? %>
<div id="posts">
  <% @posts.each do |p| %>
  <div class="post" id="post-<%= p.id %>">
    <div class="post-title">
      <h2><%= link_to truncate(p.title, length: 60, omission: " â€¦"), p %></h2>
      <span class="comment-counter">
        <%= link_to pluralize(p.comments.count, "Comment"), p %>
      </span>
    </div>
    <div class="post-info">
      by <%= link_user p.author %> on <%= p.created_at.strftime("%e. %b %Y") %>
    </div>
    <div class="post-content">
      <%= Sanitize.clean(GitHub::Markdown.render_gfm(p.content), Sanitize::Config::RELAXED).html_safe %>
    </div>
  </div>
  <% end %>
</div>
